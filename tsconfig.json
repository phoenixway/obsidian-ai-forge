{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2023"],
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"]
}
